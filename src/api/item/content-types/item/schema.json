{
  "kind": "collectionType",
  "collectionName": "items",
  "info": {
    "singularName": "item",
    "pluralName": "items",
    "displayName": "Item",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Name": {
      "type": "string"
    },
    "Image": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "item_category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::item-category.item-category",
      "inversedBy": "item"
    },
    "restaurant": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::restaurant.restaurant",
      "inversedBy": "item"
    },
    "Description": {
      "type": "blocks"
    },
    "Price": {
      "type": "integer",
      "required": true,
      "min": 1,
      "default": 1
    }
  }
}
